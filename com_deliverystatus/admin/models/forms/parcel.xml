<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_deliverystatus/models/rules"
		addfieldpath="/administrator/components/com_deliverystatus/models/fields" >
	<fieldset>
		<field
				name="created"
				type="calendar"
				label="COM_DELIVERYSTATUS_CREATED_LABEL"
				description="COM_DELIVERYSTATUS_CREATED_DESC"
				class="inputbox"
				default="NOW"			
				required="true"
				/>
		<field
				name="owner"
				type="owner"
				label="COM_DELIVERYSTATUS_OWNER_LABEL"
				description="COM_DELIVERYSTATUS_OWNER_DESC"
				class="inputbox"
				default=""
				/>
		<field
				name="parcel_number"
				type="text"
				label="COM_DELIVERYSTATUS_PARCEL_NUMBER_LABEL"
				description="COM_DELIVERYSTATUS_PARCEL_NUMBER_DESC"
				size="40"
				class="inputbox validate-parcelnumber"
				default=""			
				required="true"
				validate="parcelnumber"
				/>
		<field
				name="sender"
				type="sender"
				label="COM_DELIVERYSTATUS_SENDER_LABEL"
				description="COM_DELIVERYSTATUS_SENDER_DESC"
				size="40"
				class="inputbox validate-sender"
				default=""			
				required="true"
				validate="sender"
				/>
		<field
				name="receiver"
				type="receiver"
				label="COM_DELIVERYSTATUS_RECEIVER_LABEL"
				description="COM_DELIVERYSTATUS_RECEIVER_DESC"
				size="40"
				class="inputbox validate-receiver"
				default=""			
				required="true"
				validate="receiver"
				/>
		<field
				name="payer"
				type="payer"
				label="COM_DELIVERYSTATUS_PAYER_LABEL"
				description="COM_DELIVERYSTATUS_PAYER_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="address_from"
				type="address"
				label="COM_DELIVERYSTATUS_ADDRESS_FROM_LABEL"
				description="COM_DELIVERYSTATUS_ADDRESS_FROM_DESC"
				size="40"
				class="inputbox validate-address"
				default=""			
				required="true"
				validate="address"
				/>
		<field
				name="address_to"
				type="address"
				label="COM_DELIVERYSTATUS_ADDRESS_TO_LABEL"
				description="COM_DELIVERYSTATUS_ADDRESS_TO_DESC"
				size="40"
				class="inputbox validate-address"
				default=""			
				required="true"
				validate="address"
				/>
		<field
				name="creator"
				type="user"
				label="COM_DELIVERYSTATUS_CREATOR_LABEL"
				description="COM_DELIVERYSTATUS_CREATOR_DESC"
				class="inputbox"	
				required="true"
				/>
		<field
				name="mem"
				type="textarea"
				label="COM_DELIVERYSTATUS_MEM_LABEL"
				description="COM_DELIVERYSTATUS_MEM_DESC"
				class="inputbox"
				/>
		<field
				name="places_amount"
				type="text"
				label="COM_DELIVERYSTATUS_PLACES_AMOUNT_LABEL"
				description="COM_DELIVERYSTATUS_PLACES_AMOUNT_DESC"
				size="40"
				class="inputbox"
				/>
		<field
				name="weight"
				type="text"
				label="COM_DELIVERYSTATUS_WEIGHT_LABEL"
				description="COM_DELIVERYSTATUS_WEIGHT_DESC"
				size="40"
				class="inputbox"
				/>
		<field
				name="volume"
				type="text"
				label="COM_DELIVERYSTATUS_VOLUME_LABEL"
				description="COM_DELIVERYSTATUS_VOLUME_DESC"
				size="40"
				class="inputbox"
				/>
		<field
				name="parcel"
				type="hidden"
				/>
	</fieldset>
</form>